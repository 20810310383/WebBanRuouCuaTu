      <main style="background-color: rgb(245, 245, 245);">

        <div class="site-section"  style="background-color: rgb(245, 245, 245);">
          <div class="container">
            <div class=" rounded mb-5" style="background-color: rgb(245, 245, 245); position: relative; top: -50px;">                
                <table>
                    <tr style="width: 100%;">
                        <td style="width: 380px; background-color: rgb(245, 245, 245); ">
                            <a style="font-size: 22px;" href="#" onclick="history.go(-1);">&#9666; Trở lại trang trước</a>
                            <p style="font-size: 18px; padding: 10px 0 5px 10px; color: navy;">Mã đơn hàng: <%= chitietHDDaHuy._id %></p>
                            <p style="font-size: 18px; padding: 0 15px; color: navy;"><%= convertToVietnamTime(chitietHDDaHuy.NgayLap) %></p>

                        </td>
                        <td style="width: 530px; background-color: rgb(245, 245, 245); display: block;">
                            <p style="font-size: 25px; font-weight: bold; position: relative; left: 70px; color: navy;">CHI TIẾT ĐƠN HÀNG ĐÃ HỦY</p>
                        </td>
                        <td style="width: 200px; background-color: rgb(245, 245, 245); ">
                          <% if (chitietHDDaHuy.TinhTrangDonHang == 'Chưa giao hàng') { %>
                            <span style="
                                position: relative;
                                float: right;
                                background-color: rgb(255, 234, 234);                                             
                                padding: 8px 10px;
                                border: none;
                                font-size: 16px;
                                color: rgb(255, 0, 0);                            
                            "class="text-danger ">
                                <%= chitietHDDaHuy.TinhTrangDonHang %>
                            </span>
        
                            <% } else if (chitietHDDaHuy.TinhTrangDonHang == 'Đang giao hàng') { %>
                            <span style="
                                position: relative;
                                float: right;
                                background-color: rgb(255, 217, 0);                                             
                                padding: 5px 10px;
                                border: 2px solid rgb(255, 217, 0);
                                font-size: 16px;
                                color: black;
                        ">
                            <%= chitietHDDaHuy.TinhTrangDonHang %>
                            </span>
        
                            <% } else { %>
                            <span style="
                                    position: relative;
                                    float: right;
                                    background-color: rgb(209, 255, 209);                                             
                                    padding: 5px 10px;
                                    border: 2px solid  rgb(209, 255, 209);
                                    font-size: 16px;
                                    color: rgb(0, 128, 9);
                            ">
                                <%= chitietHDDaHuy.TinhTrangDonHang %>
                            </span>
        
                            <% } %> 
                            
                        </td>
                    </tr>
                </table>
            </div>

            <div class="p-5 bg-white rounded shadow mb-5" style="position: relative; top: -80px;">
                <!-- Rounded tabs -->
                <table>
                  <% chitietHDDaHuy.cart.items.forEach(function(ctdhSP) { %>
                    <tr style="width: 100%; border-bottom: 1px solid rgb(139, 139, 139);  ">           
                        <td style="width: 200px; background-color: white; ">
                            <div style="background-color: rgb(255, 255, 255); ">
                                <img width="180" height="200" src="images/upload/<%= getRelativeImagePath(ctdhSP.productId.Image) %>" alt="">
                            </div>
                        </td>
                        <td style="width: 660px; background-color: white;">                    
                            <p style="font-weight: bold; font-size: 22px; color: black;position: relative; top: -20px;">
                                <a style="color: navy;" href="/ctsp?idCTSP=<%= ctdhSP.productId._id %>"><%= ctdhSP.productId.TenSP %></a>
                            </p>                                                                                               
                                
                            <span style="font-size: 18px; color: red; font-weight: bold;" class="price"><%= formatCurrency(ctdhSP.productId.GiaBan) %></span>
                            &nbsp;
                            <span style="font-size: 16px; color: grey; font-weight: bold; text-decoration: line-through;" class="price price-sale"><%= formatCurrency(ctdhSP.productId.GiaCu) %></span>
                           
                        </td>
                        <td style="width: 280px; background-color: white;">
                            <p style="float: right; right: 20px; font-size: 19px; color: black; font-weight: bold;">Số lượng: <span style="color: red;"><%= ctdhSP.qty %></span></p>
                            <div style="position: relative; top: 50px; float: right; right: 10px;">
                                <a href="#" class="btn btn-primary" >Đánh giá</a>
                                <a href="/ctsp?idCTSP=<%= ctdhSP.productId._id %>" class="btn btn-danger" >Mua lại</a>
                            </div>
                        </td>                        
                    </tr>
                  <% }); %> 
                </table>
                <!-- End rounded tabs -->
            </div>

