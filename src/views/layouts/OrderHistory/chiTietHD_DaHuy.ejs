        }

         // rút gọn file ảnh chỉ lấy tên ảnh, ví dụ: abc.png
         function getRelativeImagePath(absolutePath) {
                const rootPath = '<%= rootPath.replace(/\\/g, "\\\\") %>';
                const relativePath = absolutePath ? absolutePath.replace(rootPath, '').replace(/\\/g, '/').replace(/^\/?images\/upload\//, '') : '';
                return relativePath;
            }

            // convert ngày và giờ về VN
            function convertToVietnamTime(utcDateString) {
            const options = {
                timeZone: 'Asia/Ho_Chi_Minh', // Set the time zone to Vietnam
                hour12: false, // Use 24-hour format
                year: 'numeric',
                month: 'numeric',
                day: 'numeric',
                hour: 'numeric',
                minute: 'numeric',
                second: 'numeric',
            };
        
            const utcDate = new Date(utcDateString);
            const vietnamTime = utcDate.toLocaleString('en-US', options);
            
            return vietnamTime;
            }
